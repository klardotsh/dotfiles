#!/usr/bin/env sh

CHROMIUM="$(which ungoogled-chromium 2>/dev/null)"
CHROMIUM="${CHROMIUM:-chromium}"

# Previously had --gtk-version=4 in here but now that triggers SIGSEGV ü§∑‚Äç‚ôÇÔ∏è
exec "${CHROMIUM}" \
	--kiosk \
	--user-data-dir=/home/j/.config/chromium-forgevtt \
	--ozone-platform-hint=auto \
	--render-node-override=/dev/dri/renderD128 \
	--enable-features=TouchpadOverscrollHistoryNavigation \
	--process-per-site \
	$@
